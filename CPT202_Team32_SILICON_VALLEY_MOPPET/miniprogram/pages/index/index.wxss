page{
  background-color: #ccc;
  height: 100%;
}
.banner{ width:98%; height: 295rpx; margin:5px auto ;
}
.banner swiper{ height: 100%; width:98%;margin:5px auto;
}
.banner image{ width: 98%; height: 295rpx;margin:5px auto ;
 }
::-webkit-scrollbar {
  display: yes;
}
.list{
  width: 100%;
  height: 100% ;
  overflow: auto;
}

.search{
  width: 740rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #8e6eb8;
}
.search-left{
  flex: 8;
  background: #6b69c9;
  text-align: left;
}
.search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.item{
  background-color: white;
  width: calc(96% - 30px);
  margin:5px auto;
  padding: 10px 15px;
}
.item-author{
  display: flex;
  color: #9b8878;
}
.item-author-img{
  width: 30px;
  height: 30px; 
}
.item-author-name{
  line-height: 30px;
  font-size: 14px;
  margin-left: 10px;
  width: 100%;
}
.item-text{
  font-size: 13px;
  color: #503e2c;
  margin:10px auto;
  line-height: 30px;
}
.item-info{
  display: flex;
  font-size: 14px;
  color: #9b8878;
}
.item-info-time{
  margin-right: auto;
}
.item-info-delete{
  margin-right: 20px;
  color: red;
}
.tips {
  text-align: center;
  color: #666666;
  min-width: 310px;
  font-size: 14px;
  margin: 10px 0 10px 0;
}
.thumbsup{
  display: flex;
}

.starsf{
  padding: 3rpx 0;
}