/* pages/search/search.wxss */
page{
  background-color: #ece5d8;
  height: 100%;
}

::-webkit-scrollbar {
  display: yes;
}
.list{
  width: 100%;
  height: 100% ;
  overflow: auto;
}
/* 展示框 */
.search{
  width: 740rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #8e6eb8;
}
.search-left{
  flex: 8;
  background: #6b69c9;
  text-align: left;
}
.search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.search-content {
  margin:0 30rpx;
  padding-top: 20rpx;
  margin-bottom: 30rpx;
  border-radius: 30rpx;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

